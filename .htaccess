ErrorDocument 404 /404/index.php
<Files "settings.json">
  Order Allow,Deny
  Deny from all
</Files>
php_flag display_errors 1
php_flag display_startup_errors 1
php_value error_reporting 2047

RewriteEngine On

# Redirecionar solicitações para pastas personalizadas para o custom_folder.php
RewriteRule ^white/([^/]+)/?$ custom_folder.php?type=white&folder=$1 [L,QSA]
RewriteRule ^offers/([^/]+)/?$ custom_folder.php?type=offers&folder=$1 [L,QSA]

# Permitir acesso direto a arquivos estáticos dentro de pastas personalizadas
RewriteRule ^(white|offers)/([^/]+)/(.+\.(jpg|jpeg|png|gif|css|js|ico|mp3|mp4|webp|svg))$ $1/$2/$3 [L]

# Redirecionar todas as outras solicitações para o index.php, exceto arquivos e diretórios existentes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [L,QSA]
